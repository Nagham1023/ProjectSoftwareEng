<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="251.0" prefWidth="389.0" style="-fx-background-color: #fbebf4;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.CancellationController">
    <children>
        <!-- Cancel Order Button -->
        <Button fx:id="CancelOrderButton" contentDisplay="CENTER" layoutX="151.0" layoutY="147.0" mnemonicParsing="false" onAction="#CancelOrder" style="-fx-background-color: #832018; -fx-background-radius: 10px;" text="Cancel Order" textAlignment="CENTER" textFill="#fbebf4">
            <font>
                <Font name="Bell MT" size="13.0" />
            </font>
        </Button>
        <!-- Label for Order Number -->
        <Label alignment="CENTER" layoutX="106.0" layoutY="49.0" prefHeight="27.0" prefWidth="175.0" text="Insert the order number:" textAlignment="CENTER" textFill="#832018">
            <font>
                <Font name="Bell MT" size="16.0" />
            </font>
        </Label>
        <!-- TextField for Order Number Input -->
        <TextField fx:id="ID" layoutX="130.0" layoutY="76.0" prefHeight="22.0" prefWidth="130.0" />
      <Button layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#backToMainScreen" style="-fx-background-color: #832018; -fx-background-radius: 20px;" text="←" textFill="#fbebf4" />
      <Button fx:id="CancelReservationButton" layoutX="135.0" layoutY="181.0" mnemonicParsing="false" onAction="#CancelReservation" style="-fx-background-color: #832018; -fx-background-radius: 10px;" text="Cancel Reservation" textFill="#fbebf4">
         <font>
            <Font name="Bell MT" size="13.0" />
         </font>
      </Button>
      <Label fx:id="idErrorLabel" layoutX="134.0" layoutY="108.0" text="Invalid Order Number !" textFill="#832018" visible="false">
         <font>
            <Font name="Bell MT Bold" size="12.0" />
         </font>
      </Label>
    </children>
</AnchorPane>
