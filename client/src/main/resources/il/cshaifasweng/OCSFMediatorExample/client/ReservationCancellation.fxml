<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.ReservationCancellationController" spacing="10" alignment="CENTER" >
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Text text="Cancel Reservation" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    <Text text="Please enter your details to cancel your reservation" style="-fx-font-size: 14px;"/>

    <Separator/>
    <Button fx:id="backButton" onAction="#backToHome" style="-fx-font-size: 18px; -fx-text-fill: #b70236; -fx-background-color: transparent; -fx-border-color: transparent;" text="←" />

    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" minWidth="100"/>
            <ColumnConstraints halignment="LEFT" minWidth="200"/>
        </columnConstraints>

        <Label text="Full Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Phone Number:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="phoneField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Email:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="emailField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Cancel Reservation" fx:id="cancelButton" defaultButton="true" onAction="#handleCancelReservation"/>
        <Button text="Clear" fx:id="clearButton" onAction="#handleClearFields"/>
    </HBox>

    <Label fx:id="statusLabel" style="-fx-text-fill: red;"/>
</VBox>