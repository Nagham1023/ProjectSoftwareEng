<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="250.0" prefWidth="400.0" style="-fx-background-color: #fbebf4;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.ReservationCancellationController">
    <children>
        <!-- Page Title -->
        <Label layoutX="90.0" layoutY="20.0" prefHeight="30.0" prefWidth="250.0" text="Cancel Reservation" textAlignment="CENTER" textFill="#832018">
            <font>
                <Font name="Bell MT" size="20.0" />
            </font>
        </Label>

        <!-- Full Name Input -->
        <Label layoutX="50.0" layoutY="60.0" text="Full Name:" textFill="#832018">
            <font>
                <Font name="Bell MT" size="14.0" />
            </font>
        </Label>
        <TextField fx:id="nameField" layoutX="150.0" layoutY="58.0" prefHeight="22.0" prefWidth="200.0" />

        <!-- Phone Number Input -->
        <Label layoutY="92.0" text="Reservation ID Number:" textFill="#832018">
            <font>
                <Font name="Bell MT" size="14.0" />
            </font>
        </Label>
        <TextField fx:id="reservationIdField" layoutX="150.0" layoutY="88.0" prefHeight="22.0" prefWidth="200.0" />

        <!-- Cancel Button -->
        <Button fx:id="cancelButton" layoutX="80.0" layoutY="170.0" mnemonicParsing="false" onAction="#handleCancelReservation" style="-fx-background-color: #832018; -fx-border-radius: 10px;" text="Cancel Reservation" textFill="#fbebf4">
            <font>
                <Font name="Bell MT" size="12.0" />
            </font>
        </Button>

        <!-- Clear Button -->
        <Button fx:id="clearButton" layoutX="240.0" layoutY="170.0" mnemonicParsing="false" onAction="#handleClearFields" style="-fx-background-color: #832018; -fx-border-radius: 10px;" text="Clear" textFill="#fbebf4">
            <font>
                <Font name="Bell MT" size="12.0" />
            </font>
        </Button>

        <!-- Status Label -->
        <Label fx:id="statusLabel" layoutX="50.0" layoutY="210.0" prefWidth="300.0" text="" textFill="red" />
    </children>
</AnchorPane>
