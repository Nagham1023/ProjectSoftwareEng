<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefHeight="600" prefWidth="800" style="-fx-background-color: #fbebf4;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.RestaurantListController">
    <!-- Main Scrollable Content -->
    <ScrollPane fx:id="scrollPane" fitToWidth="true" VBox.vgrow="ALWAYS">
        <content>
            <VBox fx:id="restaurantListContainer" spacing="20" style="-fx-padding: 20 20 50 20; -fx-background-color: #832018;">
                <!-- Back Arrow -->
                <HBox spacing="10" style="-fx-alignment: center-left; -fx-padding: 10;">
                    <Button fx:id="backButton" onAction="#backToHome2" style="-fx-font-size: 18px; -fx-text-fill: #fbebf4; -fx-background-color: transparent; -fx-border-color: transparent;" text="←" />
                    <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #fbebf4;" text="Branches List" />
                </HBox>
            </VBox>
        </content>
    </ScrollPane>
</StackPane>
