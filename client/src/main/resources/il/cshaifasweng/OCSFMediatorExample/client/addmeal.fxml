<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="20" style="-fx-padding: 20; -fx-background-color: #f8f5f1;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.AddMealController">
    <!-- Header with Back Arrow -->
    <HBox spacing="10" style="-fx-alignment: center-left; -fx-padding: 10;">
        <Button fx:id="backButton" onAction="#backToHome" style="-fx-font-size: 18px; -fx-text-fill: #4CAF50; -fx-background-color: transparent; -fx-border-color: transparent;" text="â†" />
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #4CAF50;" text="Add New Meal" />
    </HBox>

    <!-- Meal Name -->
    <TextField fx:id="mealNameField" promptText="Enter meal name" style="-fx-background-color: #ffffff; -fx-border-color: #e0e0e0;" />

    <!-- Meal Description -->
    <TextArea fx:id="mealDescriptionField" prefHeight="100" promptText="Enter meal description" style="-fx-background-color: #ffffff; -fx-border-color: #e0e0e0;" wrapText="true" />

    <!-- Meal Price -->
    <TextField fx:id="mealPriceField" promptText="Enter price (e.g., 15.99)" style="-fx-background-color: #ffffff; -fx-border-color: #e0e0e0;" />
   <HBox prefHeight="100.0" prefWidth="200.0">
      <children>
         <Label prefHeight="39.0" prefWidth="94.0" text="Choose Branch:" />
         <ComboBox fx:id="restaurant_name" prefWidth="150.0" />
      </children>
   </HBox>
   <VBox prefHeight="200.0" prefWidth="100.0">
      <children>
         <Label prefHeight="36.0" prefWidth="284.0" text="add costumazation" />
         <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
               <ComboBox fx:id="costumazation_name" prefWidth="150.0" />
               <Button mnemonicParsing="false" onAction="#addingCustomization" text="add" />
            </children>
         </HBox>
      </children>
   </VBox>

    <!-- Select Image -->
    <Button fx:id="selectImageButton" onAction="#onSelectImageClicked" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" text="Select Image" />
    <ImageView fx:id="mealImageView" fitHeight="150" fitWidth="200" preserveRatio="true" />

    <!-- Add Meal Button -->
    <Button fx:id="addMealButton" onAction="#onAddMealClicked" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" text="Add Meal" />

    <!-- Feedback Label -->
    <Label fx:id="feedbackLabel" style="-fx-text-fill: red; -fx-font-size: 14px;">
      <font>
         <Font name="System Bold" size="13.0" />
      </font></Label>
</VBox>
