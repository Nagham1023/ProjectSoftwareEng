<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.ForgetpassController">
    <children>
        <!-- Left Panel -->
        <AnchorPane layoutX="0.0" prefHeight="600.0" prefWidth="500.0" style="-fx-background-color: #C0FFD5;">
            <children>
                <ImageView fx:id="imglogo" fitHeight="429.0" fitWidth="293.0" layoutX="108.0" layoutY="137.0" pickOnBounds="true" preserveRatio="true" />
            </children>
        </AnchorPane>

        <!-- Right Panel -->
        <AnchorPane layoutX="500.0" prefHeight="600.0" prefWidth="500.0" style="-fx-background-color: #FFFFFF;">
            <children>
                <!-- Page Title -->
                <Label layoutX="123.0" layoutY="20.0" text="Forgot Password?">
                    <font>
                        <Font name="System Bold" size="40.0" />
                    </font>
                </Label>

                <!-- Subtext -->
                <Label layoutX="85.0" layoutY="80.0" text="Enter your account details to get your password.">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>

                <!-- Email Field -->
                <TextField fx:id="emailField" layoutX="100.0" layoutY="200.0" prefHeight="30.0" prefWidth="300.0" promptText="Enter your Email" />

                <!-- Username Field -->
                <TextField fx:id="usernameField" layoutX="100.0" layoutY="150.0" prefHeight="30.0" prefWidth="300.0" promptText="Enter your Username" />

                <!-- Submit Button -->
                <Button fx:id="Recoverbtn" layoutX="150.0" layoutY="300.0" mnemonicParsing="false" onAction="#handleRecover" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #262626; -fx-background-radius: 20;" text="Recover" textFill="WHITE">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Button>

                <!-- Error Message Label -->
                <Label fx:id="errorMessageLabel" layoutX="100.0" layoutY="370.0" prefHeight="30.0" prefWidth="300.0" textFill="RED">
                    <font>
                        <Font name="System Bold" size="13.0" />
                    </font>
                </Label>

                <!-- Back to Login -->
                <Label layoutX="140.0" layoutY="420.0" onMouseClicked="#toLogin" text="Back to Login">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
