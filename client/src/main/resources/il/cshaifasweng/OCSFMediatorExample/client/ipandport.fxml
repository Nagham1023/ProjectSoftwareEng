<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="200.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.IPandPortController">
    <children>
        <!-- Connect Button -->
        <Button layoutX="275.0" layoutY="150.0" mnemonicParsing="false" text="Connect"
                onAction="#firstconnect" style="-fx-background-color: green; -fx-text-fill: white;"
                prefWidth="120" prefHeight="40">
            <font>
                <Font name="Calibri" size="16.0" />
            </font>
        </Button>

        <!-- Main Label -->
        <Label layoutX="20.0" layoutY="20.0" text="Insert IP and Port:" style="-fx-font-weight: bold;">
            <font>
                <Font name="Calibri" size="16.0" />
            </font>
        </Label>

        <!-- IP Label -->
        <Label layoutX="20.0" layoutY="70.0" text="IP:" style="-fx-font-weight: bold;">
            <font>
                <Font name="Calibri" size="14.0" />
            </font>
        </Label>

        <!-- Port Label -->
        <Label layoutX="20.0" layoutY="110.0" text="Port:" style="-fx-font-weight: bold;">
            <font>
                <Font name="Calibri" size="14.0" />
            </font>
        </Label>

        <!-- IP TextField -->
        <TextField fx:id="ipField" layoutX="70.0" layoutY="66.0" prefWidth="200" prefHeight="30"
                   style="-fx-background-color: lightgreen; -fx-text-fill: black;" />

        <!-- Port TextField -->
        <TextField fx:id="portField" layoutX="70.0" layoutY="106.0" prefWidth="200" prefHeight="30"
                   style="-fx-background-color: lightgreen; -fx-text-fill: black;" />
    </children>
</AnchorPane>
