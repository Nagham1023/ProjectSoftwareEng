<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.RegisterController">
    <children>
        <!-- Left Panel -->
        <AnchorPane layoutX="0.0" prefHeight="600.0" prefWidth="500.0" style="-fx-background-color: #FFC0CB;">
            <children>
                <ImageView fx:id="imglogo" fitHeight="429.0" fitWidth="293.0" layoutX="108.0" layoutY="137.0" pickOnBounds="true" preserveRatio="true" />
            </children>
        </AnchorPane>

        <!-- Right Panel -->
        <AnchorPane layoutX="500.0" prefHeight="600.0" prefWidth="500.0" style="-fx-background-color: #FFFFFF;">
            <children>
                <!-- Welcome Label -->
                <Label layoutX="180.0" layoutY="20.0" text="Register">
                    <font>
                        <Font name="System Bold" size="40.0" />
                    </font>
                </Label>

                <!-- Subtext -->
                <Label layoutX="100.0" layoutY="80.0" text="Create a new account to get started.">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>

                <!-- Username Field -->
                <TextField fx:id="usernameField" layoutX="100.0" layoutY="150.0" prefHeight="30.0" prefWidth="300.0" promptText="Username" />

                <!-- Email Field -->
                <TextField fx:id="emailField" layoutX="100.0" layoutY="200.0" prefHeight="30.0" prefWidth="300.0" promptText="Email" />

                <!-- Password Field -->
                <PasswordField fx:id="passwordField" layoutX="100.0" layoutY="250.0" prefHeight="30.0" prefWidth="300.0" promptText="Password" />

                <!-- Confirm Password Field -->
                <PasswordField fx:id="confirmPasswordField" layoutX="100.0" layoutY="300.0" prefHeight="30.0" prefWidth="300.0" promptText="Confirm Password" />

                <TextField fx:id="ageField" layoutX="100.0" layoutY="350.0" prefHeight="30.0" prefWidth="300.0" promptText="Age (in years)" />
                <!-- Register Button -->
                <Button fx:id="registerButton" layoutX="150.0" layoutY="460.0" mnemonicParsing="false" onAction="#RegisterButton" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #262626; -fx-background-radius: 20;" text="Register" textFill="WHITE">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Button>

                <!-- Error Message Label -->
                <Label fx:id="errorMessageLabel" layoutX="100.0" layoutY="520.0" prefHeight="30.0" prefWidth="300.0" textFill="RED">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font></Label>

                <!-- Already have an account -->
                <Label layoutX="140.0" layoutY="560.0" onMouseClicked="#toLogin" text="Already have an account? Login">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <ComboBox fx:id="genderComboBox" layoutX="100.0" layoutY="400.0" prefHeight="30.0" prefWidth="300.0" promptText="Select Gender" />
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
