<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #fbebf4;"
           xmlns="http://javafx.com/javafx/23.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="il.cshaifasweng.OCSFMediatorExample.client.RequestViewController">

   <children>
      <!-- Main Layout -->
      <VBox spacing="10" style="-fx-alignment: center; -fx-padding: 20;">
         <!-- Title Label (Fixed at the Top) -->
         <Label alignment="CENTER" text="Changing Price Requests"
                style="-fx-text-fill: #832018; -fx-font-weight: bold; -fx-font-size: 28px;" />

         <!-- Scrollable Requests List -->
         <ScrollPane prefHeight="550.0" prefWidth="800.0"
                     style="-fx-background-color: #fbebf4; -fx-border-color: #fbebf4;">
            <content>
               <VBox fx:id="requestsContainer" spacing="20.0" style="-fx-padding: 20;">
                  <children>
                     <Label text="No pending price change requests"
                            style="-fx-font-size: 16px; -fx-text-fill: #333333;" />
                  </children>
               </VBox>
            </content>
         </ScrollPane>
      </VBox>
   </children>
</StackPane>
